---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import NovelCollection from '@/components/NovelCollection.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.novel !== undefined && !data.draft;
  });
  
  const novels = [...new Set(posts.map(post => post.data.novel))];
  
  return novels.map(novel => ({
    params: { novel },
    props: { novelId: novel }
  }));
}

const { novelId } = Astro.props;

// Humanize novel ID for title
const title = novelId?.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') || 'Novel';
---

<Layout title={title}>
  <section class="grid grid-cols-[minmax(0px,1fr)_min(calc(var(--breakpoint-md)-2rem),100%)_minmax(0px,1fr)] gap-y-6 py-12">
    <div class="col-start-2">
      <Breadcrumbs
        items={[
          { href: '/blog', label: 'Blog', icon: 'lucide:library-big' },
          { href: `/novels/${novelId}`, label: title, icon: 'lucide:book' },
        ]}
      />
      
      <div class="mt-8">
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <p class="text-muted-foreground text-lg mb-8">
          Complete collection of chapters for {title}.
        </p>
        
        <NovelCollection novelId={novelId!} />
      </div>
    </div>
  </section>
</Layout>
