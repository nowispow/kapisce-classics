---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import NovelCollection from '@/components/NovelCollection.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import { getNovelById } from '@/lib/novel-utils';

export async function getStaticPaths() {
  const novels = (await getCollection('novels')) as CollectionEntry<'novels'>[];
  
  return novels.map(novel => ({
    params: { novel: novel.id },
    props: { novelId: novel.id }
  }));
}

const { novelId } = Astro.props;
const novel = await getNovelById(novelId!);

// Humanize novel ID for title if novel data is missing
const fallbackTitle = novelId?.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') || 'Novel';
const title = novel?.data.title || fallbackTitle;
---

<Layout title={title}>
  <section class="grid grid-cols-[minmax(0px,1fr)_min(calc(var(--breakpoint-md)-2rem),100%)_minmax(0px,1fr)] gap-y-6 py-12">
    <div class="col-start-2">
      <Breadcrumbs
        items={[
          { href: '/novels', label: 'Library', icon: 'lucide:library-big' },
          { href: `/novels/${novelId}`, label: title, icon: 'lucide:book' },
        ]}
      />
      
      <div class="mt-8">
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <p class="text-muted-foreground text-lg mb-8">
          {novel?.data.description || `Complete collection of chapters for ${title}.`}
        </p>
        
        <NovelCollection novelId={novelId!} />
      </div>
    </div>
  </section>
</Layout>
